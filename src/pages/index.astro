---
import "../styles/animations.css";
import "../styles/modern.css";
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <meta
      name='description'
      content="Ugur Armagan's personal website - Front-end Developer specializing in TypeScript, JavaScript, and React"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
    <script src='../scripts/fadeIn.js'></script>
    <meta name='generator' content={Astro.generator} />
    <title>Ugur Armagan - Front-end Developer</title>
    <style>
      html {
        scroll-behavior: smooth;
        font-family: 'Inter', sans-serif;
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: 'Poppins', sans-serif;
      }

      .section-animate {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }

      .section-animate.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .skill-tag {
        transition: all 0.3s ease;
      }

      .skill-tag:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }

      .hero-gradient {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
      }
      
      .header-shadow {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }
      
      .sticky-nav {
        position: sticky;
        top: 0;
        z-index: 50;
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.8);
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }

        .section-animate {
          transition: none;
        }

        .skill-tag:hover {
          transform: none;
          box-shadow: none;
        }
      }
    </style>
  </head>

  <body class="bg-slate-50 text-slate-800 antialiased">
    <!-- Decorative elements -->
    <div class="circle-decoration w-96 h-96 bg-blue-500 top-[-200px] right-[-100px]"></div>
    <div class="circle-decoration w-64 h-64 bg-purple-500 bottom-[20%] left-[-100px]"></div>
    
    <!-- Sticky Navigation -->
    <nav class="sticky-nav py-4 header-shadow mb-4">
      <div class="max-w-5xl mx-auto px-6 flex justify-between items-center">
        <a href="#" class="text-xl font-bold text-slate-900">UA</a>
        <div class="flex space-x-8">
          <a href="#about" class="nav-link text-slate-700 hover:text-blue-600">About</a>
          <a href="#experience" class="nav-link text-slate-700 hover:text-blue-600">Experience</a>
          <a href="#skills" class="nav-link text-slate-700 hover:text-blue-600">Skills</a>
          <a href="#contact" class="nav-link text-slate-700 hover:text-blue-600">Contact</a>
        </div>
      </div>
    </nav>

    <main class="mx-auto max-w-5xl px-6 py-8 space-y-24">
      <!-- Hero Section -->
      <header class="py-20 px-6 rounded-3xl hero-gradient text-white section-animate">
        <div class="max-w-3xl mx-auto text-center space-y-6">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
            Ugur Armagan
          </h1>
          <p class="text-xl md:text-2xl text-blue-100 font-light">Front-end Developer crafting exceptional digital experiences</p>
          <div class="pt-6">
            <a href="#contact" class="btn bg-white text-blue-600 hover:bg-blue-50 hover:text-blue-700">
              Get in touch
            </a>
          </div>
        </div>
      </header>

      <!-- About Section -->
      <section
        id="about"
        class="section-spacing section-animate"
        aria-labelledby="about-heading"
      >
        <div class="max-w-3xl mx-auto">
          <h2 id="about-heading" class="text-3xl font-bold text-slate-900 mb-8 relative">
            About Me
            <span class="absolute bottom-0 left-0 w-16 h-1 bg-blue-500"></span>
          </h2>
          <div class="card p-8">
            <p class="text-xl leading-relaxed text-slate-700">
              A Front-end Developer with a focus on delivering great user
              experiences. I love solving problems and building products that make a
              positive impact on people's lives. With over 5 years of experience in
              the industry, I have a strong foundation in TypeScript, JavaScript,
              and React, and a track record of delivering high-quality,
              user-friendly software. In my free time, I enjoy playing basketball
              and running.
            </p>
          </div>
        </div>
      </section>

      <!-- Experience Section -->
      <section
        id="experience"
        class="section-spacing section-animate subtle-pattern"
        aria-labelledby="experience-heading"
      >
        <div class="max-w-3xl mx-auto">
          <h2 id="experience-heading" class="text-3xl font-bold text-slate-900 mb-8 relative">
            Experience
            <span class="absolute bottom-0 left-0 w-16 h-1 bg-blue-500"></span>
          </h2>
          <div class="space-y-8">
            <article class="card p-8 border-l-4 border-blue-500">
              <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                <h3 class="text-2xl font-bold text-slate-900">
                  Senior Front-end Developer
                </h3>
                <span class="inline-block px-3 py-1 rounded-full bg-blue-100 text-blue-800 text-sm font-medium">
                  Current Position
                </span>
              </div>
              <ul class="space-y-3 text-slate-700">
                <li class="flex items-start">
                  <span class="text-blue-500 mr-2">•</span>
                  <span>Leading front-end development initiatives and mentoring junior developers</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-500 mr-2">•</span>
                  <span>Implementing accessible and responsive web applications</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-500 mr-2">•</span>
                  <span>Architecting scalable solutions using modern web technologies</span>
                </li>
              </ul>
            </article>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section
        id="skills"
        class="section-spacing section-animate"
        aria-labelledby="skills-heading"
      >
        <div class="max-w-3xl mx-auto">
          <h2 id="skills-heading" class="text-3xl font-bold text-slate-900 mb-8 relative">
            Skills
            <span class="absolute bottom-0 left-0 w-16 h-1 bg-blue-500"></span>
          </h2>
          <div class="card p-8">
            <div class="flex flex-wrap gap-3">
              <span class="skill-tag bg-blue-100 text-blue-800 px-5 py-2 rounded-full font-medium">
                TypeScript
              </span>
              <span class="skill-tag bg-amber-100 text-amber-800 px-5 py-2 rounded-full font-medium">
                JavaScript
              </span>
              <span class="skill-tag bg-cyan-100 text-cyan-800 px-5 py-2 rounded-full font-medium">
                React
              </span>
              <span class="skill-tag bg-purple-100 text-purple-800 px-5 py-2 rounded-full font-medium">
                CSS/SCSS
              </span>
              <span class="skill-tag bg-emerald-100 text-emerald-800 px-5 py-2 rounded-full font-medium">
                Node.js
              </span>
              <span class="skill-tag bg-pink-100 text-pink-800 px-5 py-2 rounded-full font-medium">
                Web Accessibility
              </span>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section
        id="contact"
        class="section-spacing section-animate"
        aria-labelledby="contact-heading"
      >
        <div class="max-w-3xl mx-auto">
          <h2 id="contact-heading" class="text-3xl font-bold text-slate-900 mb-8 relative">
            Get In Touch
            <span class="absolute bottom-0 left-0 w-16 h-1 bg-blue-500"></span>
          </h2>
          <div class="card p-8 text-center">
            <div class="flex flex-col sm:flex-row items-center justify-center gap-8">
              <a
                href="Ugur-Armagan-2023.pdf"
                class="btn btn-primary"
                aria-label="Download Resume PDF"
              >
                Download Resume
              </a>
              <div class="flex space-x-8">
                <a
                  href="https://github.com/Uarmagan/"
                  class="transform hover:scale-125 transition-transform"
                  aria-label="Visit my GitHub profile"
                >
                  <img src="github.png" alt="" class="w-10 h-auto" />
                </a>
                <a
                  href="https://www.linkedin.com/in/ugur-armagan/"
                  class="transform hover:scale-125 transition-transform"
                  aria-label="Connect with me on LinkedIn"
                >
                  <img src="linkedin.png" alt="" class="w-10 h-auto" />
                </a>
                <a
                  href="https://twitter.com/UgurArma"
                  class="transform hover:scale-125 transition-transform"
                  aria-label="Follow me on Twitter"
                >
                  <img src="twitter.png" alt="" class="w-10 h-auto" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="py-8 mt-12 border-t border-slate-200">
      <div class="max-w-5xl mx-auto px-6 text-center text-slate-500">
        <p>© {new Date().getFullYear()} Ugur Armagan. All rights reserved.</p>
      </div>
    </footer>

    <script>
      // Intersection Observer for scroll animations
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
            }
          });
        },
        {
          threshold: 0.1,
        }
      );

      // Observe all sections
      document.querySelectorAll(".section-animate").forEach((section) => {
        observer.observe(section);
      });
      
      // Active nav link tracking
      const sections = document.querySelectorAll("section");
      const navLinks = document.querySelectorAll(".nav-link");
      
      window.addEventListener("scroll", () => {
        let current = "";
        
        sections.forEach((section) => {
          const sectionTop = section.offsetTop;
          const sectionHeight = section.clientHeight;
          if (scrollY >= sectionTop - 100) {
            current = section.getAttribute("id");
          }
        });
        
        navLinks.forEach((link) => {
          link.classList.remove("active");
          if (link.getAttribute("href").slice(1) === current) {
            link.classList.add("active");
          }
        });
      });
    </script>
  </body>
</html>
