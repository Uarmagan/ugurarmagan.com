---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ExperienceTimeline from "../components/ExperienceTimeline.astro";
import ProjectShowcase from "../components/ProjectShowcase.astro";
import Contact from "../components/Contact.astro";

const pageTitle = "Ugur Armagan - Senior Frontend Developer";
const currentYear = new Date().getFullYear();
---

<Layout title={pageTitle}>
  <main id="main-content">
    <Hero />
    <div class='container mx-auto px-4 sm:px-6 space-y-section-md md:space-y-section-lg lg:space-y-section-xl'>
      <ExperienceTimeline />
      <ProjectShowcase />
      <Contact />
    </div>
    <footer class='py-component-md mt-section-md md:mt-section-lg lg:mt-section-xl border-t border-border/20'>
      <div class='flex flex-col items-center justify-center space-y-4'>
        <div class='text-3xl font-bold font-heading'>UA</div>
        <div class='flex space-x-4 text-muted-foreground'>
          <a href='#experience' class='hover:text-foreground transition-colors'
            >Experience</a
          >
          <a href='#projects' class='hover:text-foreground transition-colors'
            >Projects</a
          >
          <a href='#contact' class='hover:text-foreground transition-colors'
            >Contact</a
          >
        </div>
        <div class='text-sm text-muted-foreground mt-component-xs'>
          Â© {currentYear} Ugur Armagan. All rights reserved.
        </div>
      </div>
    </footer>
  </div>
</Layout>
