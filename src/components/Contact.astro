---
import Section from "./Section.astro";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Mail, Clock, Send, ExternalLink } from "lucide-react";

const email = "ugurarmagan93@gmail.com";
const linkedin = "in/ugur-armagan";
const github = "github.com/Uarmagan";
---

<Section id='contact' variant='slide-up'>
  <h2 class='text-3xl md:text-4xl font-bold font-heading mb-component-md'>Get In Touch</h2>

  <p class='text-lg text-muted-foreground mb-component-lg max-w-3xl'>
    Let's discuss your next project or explore how we can work together.
  </p>

  <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-component-xs lg:gap-component-sm max-w-6xl mx-auto'>
    
    <Card className='md:col-span-2 group glass shadow-elevation-medium shadow-hover bg-gradient-to-br from-card via-card to-primary/5 hover:border-primary/60 hover:-translate-y-1 hover:shadow-elevation-high transition-all duration-300 focus-within:border-primary/60 focus-within:ring-2 focus-within:ring-primary/25'>
      <CardContent className='p-6 lg:p-8 h-full'>
        <div class='flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 h-full'>
          <div class='space-y-component-xs flex-1'>
            <div class='flex items-center gap-3 flex-wrap'>
              <h3 class='text-xl lg:text-2xl font-semibold'>Let's Connect</h3>
              <Badge variant='outline' className='border-primary/30 text-primary bg-primary/10'>
                <span class='w-2 h-2 bg-primary rounded-full mr-2 animate-pulse'></span>
                Available
              </Badge>
            </div>
            <p class='text-sm lg:text-base text-muted-foreground/95 max-w-lg'>
              I'm currently open to new opportunities and collaborations. 
              Whether it's a full-time role or an exciting project, I'd love to hear from you.
            </p>
            <div class='flex items-center gap-2 text-sm text-muted-foreground/95'>
              <Clock className='w-4 h-4' />
              <span>Usually responds within 24 hours</span>
            </div>
          </div>
          <div class='hidden lg:flex items-center justify-center'>
            <div class='w-24 h-24 lg:w-32 lg:h-32 rounded-full bg-gradient-to-tr from-muted/20 to-muted/5 flex items-center justify-center'>
              <Send className='w-10 h-10 lg:w-12 lg:h-12 text-muted-foreground/60' />
            </div>
          </div>
        </div>
      </CardContent>
    </Card>

    <a href={`mailto:${email}`} class='block h-full group'>
      <Card className='glass shadow-elevation-low shadow-hover transition-all duration-300 h-full cursor-pointer hover:border-primary/60 hover:-translate-y-1 hover:shadow-elevation-medium focus-within:border-primary/60 focus-within:ring-2 focus-within:ring-primary/25'>
        <CardContent className='p-5 lg:p-6 h-full flex flex-col'>
          <div class='flex items-start justify-between mb-4'>
            <div class='w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-muted/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300'>
              <Mail className='w-5 h-5 lg:w-6 lg:h-6 text-muted-foreground' />
            </div>
            <Badge variant='secondary' className='text-xs'>Direct</Badge>
          </div>
          <div class='flex-1 flex flex-col'>
            <h4 class='font-semibold text-base lg:text-lg mb-2'>Email</h4>
            <p class='text-sm text-muted-foreground/95 mb-4'>Drop me a line anytime</p>
            <div class='mt-auto space-y-micro-lg'>
              <code class='text-xs bg-muted/50 px-micro-lg py-micro-sm rounded font-mono text-muted-foreground/95 block overflow-x-auto'>
                {email}
              </code>
              <div class='flex items-center justify-center gap-2 text-sm font-medium text-muted-foreground group-hover:text-foreground transition-colors'>
                <span>Send Email</span>
                <Mail className='w-4 h-4 group-hover:rotate-6 transition-transform' />
              </div>
            </div>
          </div>
        </CardContent>
      </Card>
    </a>

    <a href={`https://linkedin.com/${linkedin}`} target='_blank' rel='noopener noreferrer' class='block h-full group'>
      <Card className='glass shadow-elevation-low shadow-hover transition-all duration-300 h-full cursor-pointer hover:border-primary/60 hover:-translate-y-1 hover:shadow-elevation-medium focus-within:border-primary/60 focus-within:ring-2 focus-within:ring-primary/25'>
        <CardContent className='p-5 lg:p-6 h-full flex flex-col'>
          <div class='flex items-start justify-between mb-4'>
            <div class='w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-muted/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300'>
              <svg class='w-5 h-5 lg:w-6 lg:h-6 text-muted-foreground' fill='currentColor' viewBox='0 0 24 24'>
                <path d='M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z'/>
              </svg>
            </div>
            <ExternalLink className='w-4 h-4 text-muted-foreground/60 group-hover:text-muted-foreground transition-colors' />
          </div>
          <div class='flex-1 flex flex-col'>
            <h4 class='font-semibold text-base lg:text-lg mb-2'>LinkedIn</h4>
            <p class='text-sm text-muted-foreground/95 mb-4'>Professional network</p>
            <div class='mt-auto flex items-center justify-center gap-2 text-sm font-medium text-muted-foreground/95 group-hover:text-foreground transition-colors'>
              <span>View Profile</span>
              <ExternalLink className='w-3 h-3 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform' />
            </div>
          </div>
        </CardContent>
      </Card>
    </a>

    <a href={`https://${github}`} target='_blank' rel='noopener noreferrer' class='block h-full group'>
      <Card className='glass shadow-elevation-low shadow-hover transition-all duration-300 h-full cursor-pointer hover:border-primary/60 hover:-translate-y-1 hover:shadow-elevation-medium focus-within:border-primary/60 focus-within:ring-2 focus-within:ring-primary/25'>
        <CardContent className='p-5 lg:p-6 h-full flex flex-col'>
          <div class='flex items-start justify-between mb-4'>
            <div class='w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-muted/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300'>
              <svg class='w-5 h-5 lg:w-6 lg:h-6 text-muted-foreground' fill='currentColor' viewBox='0 0 24 24'>
                <path d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z'/>
              </svg>
            </div>
            <ExternalLink className='w-4 h-4 text-muted-foreground group-hover:text-foreground transition-colors' />
          </div>
          <div class='flex-1 flex flex-col'>
            <h4 class='font-semibold text-base lg:text-lg mb-2'>GitHub</h4>
            <p class='text-sm text-muted-foreground/95 mb-4'>Check out my code</p>
            <div class='mt-auto flex items-center justify-center gap-2 text-sm font-medium text-muted-foreground/95 group-hover:text-foreground transition-colors'>
              <span>View Projects</span>
              <ExternalLink className='w-3 h-3 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform' />
            </div>
          </div>
        </CardContent>
      </Card>
    </a>

    <a href='/Ugur-Armagan-2025.pdf' target='_blank' rel='noopener noreferrer' class='block h-full group'>
      <Card className='glass shadow-elevation-low shadow-hover transition-all duration-300 bg-gradient-to-br from-card to-muted/20 h-full cursor-pointer hover:border-primary/60 hover:-translate-y-1 hover:shadow-elevation-medium focus-within:border-primary/60 focus-within:ring-2 focus-within:ring-primary/25'>
        <CardContent className='p-5 lg:p-6 h-full flex flex-col'>
          <div class='flex items-start justify-between mb-4'>
            <div class='w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-muted/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300'>
              <svg class='w-5 h-5 lg:w-6 lg:h-6 text-muted-foreground' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z' />
              </svg>
            </div>
            <Badge variant='secondary' className='text-xs'>PDF</Badge>
          </div>
          <div class='flex-1 flex flex-col'>
            <h4 class='font-semibold text-base lg:text-lg mb-2'>Resume</h4>
            <p class='text-sm text-muted-foreground/95 mb-4'>Download my latest resume</p>
            <div class='mt-auto flex items-center justify-center gap-2 text-sm font-medium text-muted-foreground/95 group-hover:text-foreground transition-colors'>
              <span>View Resume</span>
              <ExternalLink className='w-3 h-3 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform' />
            </div>
          </div>
        </CardContent>
      </Card>
    </a>

  </div>
</Section>

<style>
  .grid > :global(.card) {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .grid > :global(.card:nth-child(1)) { animation-delay: 0.1s; }
  .grid > :global(.card:nth-child(2)) { animation-delay: 0.2s; }
  .grid > :global(.card:nth-child(3)) { animation-delay: 0.3s; }
  .grid > :global(.card:nth-child(4)) { animation-delay: 0.4s; }
  .grid > :global(.card:nth-child(5)) { animation-delay: 0.5s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .grid > :global(.card:first-child) {
    background-size: 200% 200%;
    animation: fadeInUp 0.8s ease-out 0.1s forwards, gradientShift 10s ease infinite;
  }
</style>
