---
import { resumeData } from "../content/data";
import { Button } from "@/components/ui/button";

const { summary } = resumeData;
const name = "Ugur Armagan";
const currentRole = "Senior Frontend Developer";
const currentCompany = "Costco";
const location = "Chicago, IL";
const isAvailable = true;

// Shortened, punchier summary for hero
const heroSummary = "I've been building web applications for over five years, and my journey through healthcare, retail, and tech has shaped my philosophy: great engineering isn't just about clean codeâ€”it's about understanding people. I create experiences that feel effortless to users and enjoyable to the developers who inherit them.";

// Key metrics for social proof
const metrics = [
  { value: "70%", label: "Performance Boost" },
  { value: "5+", label: "Years Experience" },
  { value: "1M+", label: "Users Impacted" }
];
---

<section id='hero' class='relative pt-20 pb-24 md:pt-28 md:pb-32 overflow-hidden'>
  <!-- Background decorative elements -->
  <div class='absolute inset-0 -z-10'>
    <!-- Gradient orbs -->
    <div class='absolute top-20 left-1/4 w-72 h-72 bg-primary/5 rounded-full blur-3xl animate-pulse-slow'></div>
    <div class='absolute bottom-20 right-1/4 w-96 h-96 bg-accent/3 rounded-full blur-3xl animate-pulse-slow' style='animation-delay: 2s;'></div>
    
    <!-- Subtle dots pattern -->
    <div class='absolute inset-0 opacity-[0.015]'>
      <div class='h-full w-full' style='background-image: radial-gradient(circle, #94a3b8 1px, transparent 1px); background-size: 32px 32px;'></div>
    </div>
  </div>

  <div class='max-w-5xl mx-auto px-4 sm:px-6'>
    <!-- Availability status -->
    <div class='flex justify-center mb-6 animate-fade-in'>
      <div class='inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20 text-green-400 text-sm font-medium'>
        <div class='w-2 h-2 bg-green-400 rounded-full animate-pulse'></div>
        Available for new opportunities
      </div>
    </div>

    <!-- Professional context -->
    <div class='text-center mb-4 animate-slide-up' style='animation-delay: 100ms;'>
      <p class='text-lg md:text-xl text-primary font-medium tracking-wide'>
        Senior Frontend Engineer
      </p>
      <p class='text-muted-foreground/80 text-sm mt-1'>
        {location}
      </p>
    </div>

    <!-- Main heading with enhanced typography -->
    <div class='text-center mb-8'>
      <h1 class='text-6xl md:text-8xl lg:text-9xl font-bold font-heading mb-6 animate-slide-up' style='animation-delay: 200ms;'>
        <span class='bg-clip-text text-transparent bg-gradient-to-r from-foreground via-foreground to-foreground/70 relative'>
          {name}
          <!-- Subtle underline decoration -->
          <div class='absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-primary/50 to-accent/50 rounded-full animate-slide-up' style='animation-delay: 800ms;'></div>
        </span>
      </h1>
    </div>

    <!-- Enhanced description -->
    <div class='text-center mb-12 animate-slide-up' style='animation-delay: 300ms;'>
      <p class='text-xl md:text-2xl text-muted-foreground max-w-4xl mx-auto leading-relaxed'>
        {heroSummary}
      </p>
    </div>

    <!-- Metrics showcase -->
    <div class='flex justify-center mb-12 animate-slide-up' style='animation-delay: 400ms;'>
      <div class='grid grid-cols-3 gap-8 md:gap-12'>
        {metrics.map((metric, index) => (
          <div class='text-center group'>
            <div class='text-2xl md:text-3xl font-bold text-primary group-hover:scale-110 transition-transform duration-300'>
              {metric.value}
            </div>
            <div class='text-sm text-muted-foreground/80 mt-1 font-medium'>
              {metric.label}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Enhanced CTA buttons -->
    <div class='flex flex-col sm:flex-row justify-center items-center gap-4 animate-slide-up' style='animation-delay: 500ms;'>
      <Button asChild size="lg" className="group relative overflow-hidden">
        <a href='#contact' class="flex items-center gap-2">
          <span>Let's work together</span>
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            width="18" 
            height="18" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round"
            class="transition-transform group-hover:translate-x-1"
          >
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </Button>
      
      <Button variant='outline' asChild size="lg" className="group">
        <a href='#projects' class="flex items-center gap-2">
          <span>View my work</span>
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            width="16" 
            height="16" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round"
            class="transition-transform group-hover:scale-110"
          >
            <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/>
            <path d="M9 18h6"/>
            <path d="M10 22h4"/>
          </svg>
        </a>
      </Button>
    </div>

    <!-- Company logos for social proof -->
    <div class='flex justify-center mt-16 animate-fade-in' style='animation-delay: 600ms;'>
      <div class='text-center'>
        <p class='text-sm text-muted-foreground/60 mb-6 font-medium tracking-wider uppercase'>
          Trusted by leading companies
        </p>
        <div class='flex items-center justify-center gap-8 md:gap-12 opacity-60 hover:opacity-80 transition-opacity'>
          <div class='text-2xl font-bold text-muted-foreground'>Costco</div>
          <div class='w-px h-8 bg-border'></div>
          <div class='text-2xl font-bold text-muted-foreground'>Optum</div>
          <div class='w-px h-8 bg-border'></div>
          <div class='text-2xl font-bold text-muted-foreground'>Livefront</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulseSlow {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slideUp 1s ease-out forwards;
    opacity: 0;
  }

  .animate-pulse-slow {
    animation: pulseSlow 4s ease-in-out infinite;
  }

  /* Enhanced hover effects */
  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }

  .group:hover .group-hover\:translate-x-1 {
    transform: translateX(0.25rem);
  }
</style>
