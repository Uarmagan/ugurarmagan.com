---
import { resumeData } from "../content/data";
import { Button } from "@/components/ui/button";
import Nav from "./Nav.tsx";
import { ArrowRight, ArrowDown } from "lucide-react";

const { summary } = resumeData;
const name = "Ugur Armagan";
const currentRole = "Senior Frontend Engineer";
const location = "Chicago, IL";
const isAvailable = true;

// Shortened, punchier summary for hero
// Refined hero content
const heroTagline = "I craft digital experiences that delight users and empower developers.";
const heroHighlight = "7+ years. 3 industries. 1M+ users impacted.";
const heroPhilosophy = "Great engineering isn't just about clean code—it's about understanding people.";

// Removed metrics array - integrating key metric inline instead
---

<section id='hero' class='relative min-h-screen overflow-hidden'>
  <!-- Nav at the top of Hero section -->
  <div class='relative z-10 container mx-auto px-4 sm:px-6 pt-6'>
    <Nav client:load />
  </div>


  <!-- Hero content -->
  <div class='flex items-center justify-center min-h-[calc(100vh-120px)]'>
    <div class='max-w-3xl mx-auto px-4 sm:px-6 text-center'>
      <!-- Main content flow -->
      <div class='space-y-12'>
        
        <!-- Name and role -->
        <div class='space-y-3 animate-fade-in-up'>
          <h1 class='text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight '>
            {name}
          </h1>
          <p class='text-lg md:text-xl text-muted-foreground font-medium'>
            {currentRole} · {location}
          </p>
        </div>

        <!-- Value proposition - the main hook -->
        <div class='space-y-8 animate-fade-in-up' style='animation-delay: 100ms;'>
          <p class='text-2xl md:text-3xl lg:text-4xl font-light leading-relaxed text-foreground/90 max-w-3xl mx-auto mt-6'>
            {heroTagline}
          </p>
          
          <!-- Key metrics - visual break -->
          <div class='flex items-center justify-center gap-4 text-base md:text-lg'>
            <span class='h-px w-16 bg-primary/30'></span>
            <span class='text-primary font-medium tracking-wide'>{heroHighlight}</span>
            <span class='h-px w-16 bg-primary/30'></span>
          </div>
          
          <!-- Philosophy -->
          <p class='text-lg md:text-xl text-muted-foreground/70 mx-auto italic font-light transition-all duration-300 hover:text-muted-foreground'>
            "{heroPhilosophy}"
          </p>
        </div>

        <!-- CTAs -->
        <div class='flex flex-col sm:flex-row justify-center items-center gap-6 mt-16 animate-fade-in-up' style='animation-delay: 200ms;'>
          <Button asChild size="lg" className="group relative px-10 py-7 text-lg font-medium bg-primary hover:bg-primary/90 shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-primary/30 transition-all duration-300">
            <a href='#contact' class="inline-flex items-center gap-3">
              <span class="relative z-10">Let's work together</span>
              <ArrowRight className="relative z-10 w-5 h-5 transition-all duration-300 group-hover:translate-x-1.5" />
              <div class="absolute inset-0 rounded-[inherit] bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 translate-x-[-100%] group-hover:translate-x-[100%] transition-all duration-700"></div>
            </a>
          </Button>
          
          <a href='#projects' class="group inline-flex items-center gap-2 px-8 py-3 text-base font-medium text-muted-foreground hover:text-foreground transition-all duration-300">
            <span>View my work</span>
            <ArrowDown className="w-[18px] h-[18px] transition-transform duration-300 group-hover:translate-y-[2px]" />
          </a>
        </div>

        <!-- Social proof - subtle at bottom -->
        <div class='pt-12 mt-20 border-t border-border/10 animate-fade-in' style='animation-delay: 300ms;'>
          <p class='text-sm text-muted-foreground/50 uppercase tracking-wider mb-4'>Trusted by</p>
          <div class='flex items-center justify-center gap-8 md:gap-12'>
            {['Costco', 'Optum', 'Livefront'].map((company) => (
              <span class='text-lg md:text-xl font-medium text-muted-foreground/50 hover:text-muted-foreground/70 transition-colors'>
                {company}
              </span>
            ))}
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
