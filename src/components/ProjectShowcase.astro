---
import Section from "./Section.astro";
import { resumeData } from "../content/data";
// Import shadcn Card components
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  // CardDescription is removed as we structure content differently
  // CardFooter is removed for now
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge"; // Using Badge for technologies

const { projects } = resumeData;
---

<Section id='projects' variant='slide-up'>
  <h2 class='text-3xl md:text-4xl font-bold font-heading mb-8'>
    Project Highlights
  </h2>

  <p class='text-lg text-muted-foreground mb-12 max-w-3xl'>
    Selected case studies demonstrating my approach and impact.
  </p>

  <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
    {
      projects.map((project, index) => (
        <Card
          key={index}
          className='group flex flex-col justify-between overflow-hidden border border-border/40 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:border-primary/50 hover:shadow-lg hover:-translate-y-1'
        >
          <CardHeader className='pb-4'>
            <div class='flex items-center justify-between mb-4'>
              <CardTitle className='text-xl group-hover:text-primary transition-colors'>
                {project.name}
              </CardTitle>
              {project.logoUrl && (
                <img
                  src={project.logoUrl}
                  alt={`${project.company} logo`}
                  class='h-8 w-auto object-contain filter grayscale group-hover:filter-none transition-all duration-300'
                />
              )}
            </div>
            <p class='text-sm font-medium text-muted-foreground'>
              {project.company}
            </p>
          </CardHeader>

          <CardContent className='flex-grow space-y-5'>
            <div>
              <h4 class='text-sm font-semibold uppercase tracking-wider text-primary/80 mb-1.5'>
                Challenge
              </h4>
              <p class='text-sm text-muted-foreground'>{project.challenge}</p>
            </div>
            <div>
              <h4 class='text-sm font-semibold uppercase tracking-wider text-primary/80 mb-1.5'>
                Solution
              </h4>
              <p class='text-sm text-muted-foreground'>{project.solution}</p>
            </div>
            <div>
              <h4 class='text-sm font-semibold uppercase tracking-wider text-primary/80 mb-1.5'>
                Impact
              </h4>
              <p class='text-sm text-muted-foreground'>{project.impact}</p>
            </div>
          </CardContent>

          <div class='p-6 pt-4'>
            {project.technologies && project.technologies.length > 0 && (
              <div>
                <h5 class='text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-2'>
                  Key Technologies
                </h5>
                <div class='flex flex-wrap gap-1.5'>
                  {project.technologies.map((tech: string) => (
                    <Badge variant='secondary' className='text-xs font-medium'>
                      {tech}
                    </Badge>
                  ))}
                </div>
              </div>
            )}
          </div>
        </Card>
      ))
    }
  </div>
</Section>

<style>
  /* Optional styles removed as inline Tailwind classes handle hover effects */
</style>
